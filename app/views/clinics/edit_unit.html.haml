- title "Edit #{current_capturesystem.name} Unit"

= form_tag(controller: :clinics, action: :update_unit, method: :post) do
  .clearfix
    = label_tag :selected_unit_code, "#{current_capturesystem.name} Unit Selection"
    .input
      = select_tag :selected_unit_code, clinics_unit_options(current_capturesystem), {class: 'large'}
  .clearfix
    = label_tag :updated_unit_name, "#{current_capturesystem.name} Unit Name"
    .input
      = text_field_tag :updated_unit_name
      = required
  .actions
    = submit_tag 'Save', class: 'btn primary'
    = link_to 'Back', clinics_path, class: 'btn'