- title 'New Clinic'

= form_for @clinic do |f|
  = render 'shared/error_messages', target: @clinic
  .clearfix
    = f.label :unit_selection, "#{current_capturesystem.name} Unit Selection"
    .input
      = select_tag :unit_selection, clinics_unit_options_with_new(current_capturesystem), {class: 'large'}
  .clearfix
    = f.label :unit_code, "#{current_capturesystem.name} Unit"
    .input
      = f.text_field :unit_code
      = required
  .clearfix
    = f.label :unit_name, "#{current_capturesystem.name} Unit Name"
    .input
      = f.text_field :unit_name
      = required
  .clearfix
    = f.label :site_code, 'ART Unit'
    .input
      = f.text_field :site_code
      = required
  .clearfix
    = f.label :site_name, 'ART Unit Name'
    .input
      = f.text_field :site_name
      = required
  .clearfix
    = f.label :state, 'State'
    .input
      = f.select :state, @allowed_states
      = required
  .actions
    = f.submit 'Save', class: 'btn primary'
    = link_to 'Back', clinics_path, class: 'btn'
