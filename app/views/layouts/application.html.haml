!!!
%html
  = render partial: "shared/head"
  %body{style:"#{user_signed_in? ? 'padding: 60px 0 0 0': 'padding: 140px 0 0 0'}"}
    #page_container
      #content_wrapper
        = render partial: "shared/topbar"
        .container
          = render partial: "shared/alert_bar"

          = yield :nav

          - if @heading_span12
            - if @heading_centered
              %div{class: "centered_wrapper"}
                %h1.span12= yield :heading
            - else
              %h1.span12= yield :heading
          - else
            - if @heading_centered
              %div{class: "centered_wrapper"}
                %h1= yield :heading
            - else
              %h1= yield :heading

          = yield :tabs

          = yield
      = render partial: "shared/footer"