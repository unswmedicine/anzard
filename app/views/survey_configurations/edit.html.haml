- title 'Edit Survey Configuration'

= form_for(@survey_configuration, url: survey_configuration_path(@survey_configuration)) do |f|
  -#ToDo: Investigate why full errors aren't being shown by partial
  = render 'shared/error_messages', target: @survey_configuration
  = fields_for :survey, @survey_configuration.survey do |fs|
    .clearfix
      = fs.label :name, 'Treatment Data'
      .input
        = fs.text_field :name, disabled: true
  .clearfix
    = f.label :start_year_of_treatment, 'Start Year'
    .input
      = f.text_field :start_year_of_treatment
  .clearfix
    = f.label :end_year_of_treatment, 'End Year'
    .input
      = f.text_field :end_year_of_treatment
  - if current_capturesystem.name == 'VARTA'
    .clearfix
      = f.label :year_range_type, 'Use Fiscal year'
      .input
        = f.check_box :year_range_type, {disabled: true}, 'F', 'C'
  .actions
    = f.submit 'Save', class: 'btn primary'
    = link_to 'Back', survey_configurations_path, class: 'btn'
