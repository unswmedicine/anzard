.container
  .container-flex
    .container-flex-item{style:'width:600px; height:500px; overflow:hidden;'}
      = image_tag('npesu_landscape_logo.png', style:'height:500px; margin:0 0 0 10px;')
    .container-fixed-item
      %h2{:style=>'text-align: center'} Please log in to begin
      .clearfix
        = f.label :email, "Email:"
        .input
          = f.text_field :email, class: "xlarge"
      .clearfix
        = f.label :password, "Password:"
        .input
          = f.password_field :password, class: "xlarge"
      .actions
        = f.submit "Log in", class: "btn primary"
        = link_to "Forgot your password?", new_user_password_path, class: "btn"
    .container-flex-item
      - #= link_to (image_tag 'logo_unsw.png', class: 'logo'), 'https://www.unsw.edu.au/'
  .container-flex
    .container-flex-item
