- if user_signed_in?
  - title 'Data Entry Forms'

  - content_for :tabs do
    = render 'tabs'

  = link_to "Start New Data Entry Form", new_response_path, class: 'btn' if can?(:create, Response)

  = render 'responses/survey_response_list'

- else
  - title 'Home'
  #content_container
    .container_home
      = form_for("user", url: user_session_path) do |f|
        = render(partial: 'devise/sessions/form', locals: { f: f })

